<div class="content">
<% if AuthenticationHelper.logged_in?(session) %>
  <h2><%= @student.name %></h2>
  <table border="3">
    <thead>
    </thead>
    <tr>
      <td>Grade Level</td>
      <td><%= @student.grade_level %>
    </tr>
    <tr>
      <td>Contact</td>
      <td><%= @student.contact_name %>
    </tr>
    <tr>
      <td>Phone</td>
      <td><%= @student.contact_phone %>
    </tr>
  </table><br>
  <a href='/students/<%= @student.id %>/edit'><button>Edit</button></a><br><br>
  <form action='/students/<%= @student.id %>' method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete Student">
  </form><br>
<% else %>
  <p>ERROR: You must be logged in and own this course to view this page.</p>
<% end %>
</div>