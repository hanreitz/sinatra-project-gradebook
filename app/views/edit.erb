<div class="container">
  <div class="col-md-8 col-md-offset-2">

    <% if AuthenticationHelper.logged_in?(session) && AuthenticationHelper.current_user(session).id == @teacher.id %>  
      <h2>Edit Account</h2>
      <p>You may edit the following information. All fields required.</p>

      <div class="content">
        <form action='/signup' method="POST">
          <label for="first_name">First Name:</label>
          <input type="text" name="first_name" value="<%= @teacher.first_name %>"><br><br>
          <label for="last_name">Last Name:</label>
          <input type="text" name="last_name" value="<%= @teacher.last_name %>"><br><br>
          <label for="email">Email Address:</label>
          <input type="text" name="email" value="<%= @teacher.email %>"><br><br>
          <label for="password">Password:</label>
          <input type="password" name="password"><br><br>
          <input type="submit" value="Sign Up"><br>
        </form><br>

      </div>
    <% else %>
      <p> You may not view this page unless you are the appropriate user. </p>
    <% end %>

  </div>
</div>